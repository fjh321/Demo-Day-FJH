        </div>
        <h2 id="producth2">Add a product, description/additional info, and its quantity below</h2>
        <% if (user.local.email) { %>
          <div class="input-div">
          <form action="/messages" method="POST">
            <input class="forminput1" type="text" placeholder="Type Item Name" name="product">
            <input type="text" class="forminput3" placeholder="item addtl. info/description" name="description">
            <input class="forminput2" type="number" name="quantity" placeholder="quantity" min="0" step="1">
            <input class="forminput4" type="number"  name="threshold" placeholder="alert threshold #">
            <!-- <input class="forminput4" type="number"  name="rate" placeholder="Sell rate alert"> -->
            <button id="submitButton" type="submit">Submit</button>
          </form>
        </div>
        <% } %>

        <div class="column1">
          <h3 id="producth3">All products and current stock</h3>
          <ul class="listOne">
          <% for(var i=0; i<messages.length; i++) {%>
            <li class="message" data-id="<%= messages[i]._id %>">
              <img src="https://barcode.orcascan.com/?type=code128&data=<%= messages[i].product %>" alt="qr" class="qr">
              <span class="product"><%= messages[i].product %></span>
              <span class="description"><%= messages[i].description %></span>  Quantity:
              <input id="quantity" type="number" min="0" step="1" value="<%= parseInt(messages[i].quantity) %>"></input>
              Alert threshold:
              <input id="threshold" type="number" min="1" step="1" value="<%= parseInt(messages[i].threshold) %>"></input>
              <!-- <input id="rate" type="number" min="1" step="1" value="<%= Number(messages[i].rate) %>"></input> -->
              
              
              <button class="deleteButton">Delete</button>
              <button class="editButton">Update/Save</button>
              <!-- <button class="addInput">+ field</button> -->

            </li>
          <% } %>
          </ul>
      



          



